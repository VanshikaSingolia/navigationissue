<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp">



        <ImageView
            android:id="@+id/feature_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_search__icon"
            android:padding="20dp"
            >

        </ImageView>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/feature_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/montserrat"
            android:text="Find your ride"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#0D1947"
            android:textSize="14dp">


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feature_description"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:text="orem ipsum dolor sit amet, consectetur adipiscing elit  "

            android:textColor="#C8C5C5"
            android:textSize="14dp">


        </TextView>



    </androidx.cardview.widget.CardView>

